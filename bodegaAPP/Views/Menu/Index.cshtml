@model bodegaAPP.Dominio.Bodega
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <h2> </h2>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <strong>Datos</strong>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-5">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker"></i></span>
                                    <input class="form-control" id="direccion" name="direccion" type="text" value="@Html.DisplayFor(model => model.nombre)" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker"></i></span>
                                    <input class="form-control" id="direccion" name="direccion" type="text" value="@Html.DisplayFor(model => model.idbodega)" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker"></i></span>
                                    <input class="form-control" id="direccion" name="direccion" type="text" value="@Html.DisplayFor(model => model.direccion)" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input class="form-control" id="contacto" name="contacto" type="text" value="@Html.DisplayFor(model => model.contacto)" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                                    <input class="form-control" id="telefono" name="telefono" type="text" value="@Html.DisplayFor(model => model.telefono)" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <div class="checkbox">
                                    <label>@Html.CheckBoxFor(model => model.activo, new { @disabled = "disabled" }) Estado</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <style>
                        #map {
                            height: 400px;
                            width: 600px;
                        }
                    </style>

                    <div class="row">
                        <div id="map"></div>
                        <script>
                const myLatLng = { lat: @Html.DisplayFor(model => model.latitud), lng: @Html.DisplayFor(model => model.longitud) };
                function initMap() {
                    const map = new google.maps.Map(document.getElementById("map"), {
                    zoom: 18,
                    center: myLatLng,
                    });

                    new google.maps.Marker({
                        position: myLatLng,
                        map,
                        title: "",
                    });
                }
                        </script>
                        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAklTEBaGL6_JdZ3lTVqjsxDdhbh81J9OA&callback=initMap&v=weekly"
                                async></script>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group">
                @Html.ActionLink("Editar", "Edit", new { id1 = Model.idbodega }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Ver Pedidos", "Pedido", new { id = Model.idbodega }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Ver Productos", "Index", "Productos", new { id = Model.idbodega }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>